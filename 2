#Sınıfların tanımlanması

class magaza():
    urunler = []
    def urun_ekle(self,ekle):
        self.urunler.append(ekle)
        
class urun():      
    def _init_(self):
        self.satis = 0
        self.stok = 0
        self.indirim = 0
        self.fiyat = 0
    
magaza = magaza()
urun = urun()

